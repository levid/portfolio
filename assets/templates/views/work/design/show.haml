%script{:id => "views/work/design/show.html", :type => "text/ng-template"}
  %section.sub.design.show.view
    .innerContent
      %div{:"ng-include" => '', :src => "'views/partials/user-header.html'"}

      .info-container
        .content
          %h3 {{project.name}}

          .block
            %table
              %tr
                %td Url
                %td
                  %a{:"ng-href" => "{{project.url}}"} {{project.url || 'N/A'}}

              %tr
                %td Year
                %td
                  %div {{project.date | date:'yyyy' || 'N/A'}}

              %tr
                %td Description
                %td
                  %div {{project.description || 'N/A'}}
          %a.btn.btn-back{:"ng-href" => '/#/work/design/'}
            %i.icon-portfolio-arrow-left
            Back
          / .block
          /   %a.btn.btn-teal{:"data-ng-href" => "{{project.url}}"}
          /     %i.icon-portfolio-resize
          /     Website
      .thumbnails
        %div{:"ng-repeat" => "image in project.image_paths"}
          %div{:"ng-repeat" => "(key, val) in image"}
            %div{:"ng-switch" => '', :on => "key"}
              .thumb{:"ng-switch-when" => "logo_large"}
                %img{:"ng-src" => "images/portfolio_images/{{image.id}}/{{val}}"}
              .thumb{:"ng-switch-when" => "composite_image_desktop"}
                %img{:"ng-src" => "images/portfolio_images/{{image.id}}/{{val}}"}
              .thumb{:"ng-switch-when" => "composite_image_laptop"}
                %img{:"ng-src" => "images/portfolio_images/{{image.id}}/{{val}}"}
              .thumb{:"ng-switch-when" => "composite_image_tablet"}
                %img{:"ng-src" => "images/portfolio_images/{{image.id}}/{{val}}"}
              .thumb{:"ng-switch-when" => "large_image"}
                %img{:"ng-src" => "images/portfolio_images/{{image.id}}/{{val}}"}
              .thumb{:"ng-switch-when" => "screenshot_large"}
                %img{:"ng-src" => "images/screenshots/{{image.id}}/{{val}}"}